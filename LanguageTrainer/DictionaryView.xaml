<UserControl x:Class="LanguageTrainer.DictionaryViewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.01*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок словаря -->
        <TextBlock x:Name="DictionaryTitle"
                   Grid.Row="0"
                   Style="{StaticResource DictionaryViewTitleStyle}"/>

        <!-- Контейнер для слов -->
        <ScrollViewer Grid.Row="1" 
                      VerticalAlignment="Stretch"
                      Style="{StaticResource ContentScrollViewerStyle}">
            <StackPanel x:Name="WordsContainer"
                        HorizontalAlignment="Left">
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки действий -->
        <StackPanel Grid.Row="2" 
                    x:Name="ButtonsPanel"
                    Orientation="Horizontal" 
                    HorizontalAlignment="Left"
                    Margin="0,0,0,0">

            <Button x:Name="CreateButton"
                    Style="{StaticResource ContentActionButtonStyle}"
                    Click="CreateButton_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Style="{StaticResource ContentActionButtonTextStyle}" 
                               Text="+ Добавить"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>