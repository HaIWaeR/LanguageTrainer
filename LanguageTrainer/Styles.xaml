<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="ScrollViewer">
        <Setter Property="Background" Value="#272537"/>
    </Style>

    <Style x:Key="CreateGroupButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="300"/>
        <Setter Property="Height" Value="60"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="30"/>
        <Setter Property="FontFamily" Value="Comic Sans MS"/>
    </Style>

    <Style x:Key="ButtonContainerStyle" TargetType="Grid">
        <Setter Property="Width" Value="230"/>
        <Setter Property="Height" Value="150"/>
        <Setter Property="Margin" Value="10,5"/>
    </Style>

    <Style x:Key="BottomTextBoxStyle" TargetType="TextBox">
        <Setter Property="Width" Value="180"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Background" Value="Red"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="FontFamily" Value="Comic Sans MS"/>
    </Style>

    <Style x:Key="GroupButtonStyle" TargetType="Button">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="Background" Value="#58567D"/>
        <Setter Property="BorderBrush" Value="Transparent"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border CornerRadius="30"
                            Background="{TemplateBinding Background}"
                            BorderThickness="2">
                            <!-- Вставляем StackPanel для отображения флага и текста -->
                            <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center">
                                <Image x:Name="FlagImage"
                                   Width="30"
                                   Height="20"
                                   Margin="0,0,10,0"
                                   VerticalAlignment="Center"/>
                                <TextBlock x:Name="GroupNameText"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="20"
                                       FontFamily="Comic Sans MS"/>
                            </StackPanel>
                        </Border>

                        <!-- Нижняя полоска с названием группы -->
                        <Border CornerRadius="10"
                            BorderThickness="1"
                            Width="180"
                            Height="30"
                            VerticalAlignment="Bottom"
                            Margin="0,0,0,10"
                            Background="Transparent">
                            <TextBlock x:Name="BottomText"
                                   Text="{TemplateBinding Tag}"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="20"
                                   FontFamily="Comic Sans MS"/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



    <Style x:Key="GroupContextMenuStyle" TargetType="ContextMenu">
        <Setter Property="Background" Value="#58567D"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style x:Key="GroupMenuItemStyle" TargetType="MenuItem">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="Comic Sans MS"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

</ResourceDictionary>